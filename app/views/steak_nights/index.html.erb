<p id="notice"><%= notice %></p>

<h1>Listing Steak Nights</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Night</th>
      <th>Max guests</th>
      <th>Cover</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @steak_nights.each do |steak_night| %>
      <tr>
        <td><%= steak_night.title %></td>
        <td><%= steak_night.night %></td>
        <td><%= steak_night.max_guests %></td>
        <td><%= steak_night.cover %></td>
        <td><%= link_to 'Show', steak_night %></td>
        <td><%= link_to 'Edit', edit_steak_night_path(steak_night) %></td>
        <td><%= link_to 'Destroy', steak_night, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

